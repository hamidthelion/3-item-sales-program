# variable declaration

# item1-gloves
item1_description = "Elite MMA Gloves."
item1_price = 254.00

# item2-wristWraps
item2_description = "Elite MMA Wrist Wraps."
item2_price = 180.50

#item3-shinGuards
item3_description = "Elite MMA Shin Guards."
item3_price = 52.15

#taxes
sales_tax = .043

#customer variables
customer_one_total = 0
customer_one_itemization = ""

# customer interaction
customer_one_total += item1_price
customer_one_itemization += item1_description
customer_one_total += item3_price
customer_one_itemization += item3_description
customer_one_tax = customer_one_total * sales_tax
customer_one_total += customer_one_tax

#display output
print("Customer One Items:")
print(customer_one_itemization)
print("Customer One Total:")
print(customer_one_total)
